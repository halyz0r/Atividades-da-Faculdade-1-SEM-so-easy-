#define _CRT_SECURE_NO_WARNINGS
#include "stdio.h"
#include "stdlib.h"
#include "math.h"


int main()
{
	int a, media, numero1, numero2, numero3, numero4, numero5;

	printf("Digite 5 numeros para somar e multiplicar o resultado:");
	scanf("%d %d %d %d %d", &numero1, &numero2, &numero3, &numero4, &numero5);

	a = numero1 + numero2 + numero3 + numero4 + numero5;
	media = a / 2;
		printf("Soma:%d\n Media: %d\n\n", a, media);

	media = (numero1 + numero2 + numero3 + numero4 + numero5) / 2;


	system("PAUSE");
	return 0;
}
