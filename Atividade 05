#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main() {
	float hipotenusa, cateto1, cateto2;

	printf("Digite os dois catetos abaixo:\n");
	scanf("%f %f", &cateto1, &cateto2);

	hipotenusa = sqrt(pow(cateto1, 2) + pow(cateto2, 2));
	printf("Resultado de qualquer triangulo retangulo hipotenusa: %.1f\n", hipotenusa);

	system("PAUSE");
	return 0;
}
