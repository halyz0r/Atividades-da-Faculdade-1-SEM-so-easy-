#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
	int h, m, s, total;
				printf("Informe o valor de segundos:" "\n");
			scanf("%d", &total);
	
		h = total % 3600;
		m = (total % 3600) / 60;
		s = (total % 3600) / 60;
				printf("%dh:%dm:%ds \n", h, m, s);

	system("PAUSE");
return 0;
}
